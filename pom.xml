<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.6.6</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>
	<groupId>com.basf</groupId>
	<artifactId>periodictableservice-argocd</artifactId>
	<version>0.0.4-SNAPSHOT</version>
	<name>api</name>
	<description>Demo project for Spring Boot and Argocd</description>
	<properties>
		<java.version>11</java.version>
		<server.host>localhost</server.host>
		<docker.image.name>registry.hub.docker.com/amegia1/${project.artifactId}:${project.version}</docker.image.name>
		<!--suppress UnresolvedMavenProperty -->
		<docker.registry.username>${DOCKER_REGISTRY_USERNAME}</docker.registry.username>
		<!--suppress UnresolvedMavenProperty -->
		<docker.registry.password>${DOCKER_REGISTRY_PASSWORD}</docker.registry.password>
		<!--suppress UnresolvedMavenProperty -->
		<docker.registry.email>${DOCKER_REGISTRY_EMAIL}</docker.registry.email>
	</properties>
	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-actuator</artifactId>
		</dependency>
	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<image>
						<name>${docker.image.name}</name>
						<env>
							<BP_JVM_VERSION>${java.version}</BP_JVM_VERSION>
							<BPL_JVM_THREAD_COUNT>62</BPL_JVM_THREAD_COUNT>
							<BPE_DELIM_JAVA_TOOL_OPTIONS xml:space="preserve"> </BPE_DELIM_JAVA_TOOL_OPTIONS>
							<BPE_APPEND_JAVA_TOOL_OPTIONS>-Xss256K -XX:ReservedCodeCacheSize=60M</BPE_APPEND_JAVA_TOOL_OPTIONS>
						</env>
						<publish>true</publish>
					</image>
					<docker>
						<publishRegistry>
							<url>https://index.docker.io/v2</url>
							<username>${docker.registry.username}</username>
							<password>${docker.registry.password}</password>
							<email>${docker.registry.email}</email>
						</publishRegistry>
					</docker>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>